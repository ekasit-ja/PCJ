<div class="container">
    <h2 class="header">update model</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <div class="img-frame"><img src="<%= model.image %>"></div><br>
        <select name="type" class="form-control">
            <% _.each(types, function(type) { %>
                <option value="<%= type.id %>" <%=model.type==type.id?"selected":""%> ><%= type.title %></option>
            <% }) %>
        </select><br>
        <input type="text" name="title" placeholder="title" class="form-control" required value="<%= model.title %>"><br>
        <input type="text" name="title_th" placeholder="title_th" class="form-control" value="<%=model.title_th||''%>"><br>

        <%- partial("../base/input-desc.ejs") %>

        <input type="file" name="image" class="form-control"><br>

        <input type="submit" value="Update" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ModelController.manage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
