<div class="container">
    <h2 class="header">create model</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <select name="type" class="form-control">
            <% _.each(types, function(type) { %>
                <option value="<%= type.id %>"><%= type.title %></option>
            <% }) %>
        </select><br>
        <input type="text" name="title" placeholder="title" class="form-control" required><br>
        <input type="text" name="title_th" placeholder="title_th" class="form-control"><br>

        <%- partial("../base/input-desc.ejs") %>

        <input type="file" name="image" class="form-control" required><br>

        <input type="submit" value="Create" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ModelController.manage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
