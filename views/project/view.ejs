<div class="container">
    <h2 class="header">projects</h2>
    Filter By: Region
    <select name="region">
        <option value="">All</option>
        <option value="th">Thailand</option>
    </select>

    Year
    <select name="year">
        <option value="">All</option>
        <option value="2016">2016</option>
    </select>
    <hr>

    <div class="project-container">
        <% _.each(projects, function(project, i) { %>
            <% if(i%3 == 0) { %>
                <div class="row">
            <% } %>

            <div class="col-sm-4 tag-container">
                <div class="col-sm-12 limiter project" data-pid="<%= project.id %>">
                    <div class="img project" style="background-image:url('<%= project.image[0] %>')"></div>
                    <div class="tag-label"><span><%= project.title %></span></div>
                </div>
            </div>

            <% if((i+1)%3 == 0) { %>
                </div>
            <% } %>
        <% }) %>
