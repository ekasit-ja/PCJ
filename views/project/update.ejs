<div class="container">
    <h2 class="header">create project</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <div class="img-frame"><img src="<%= project.image[0] %>"></div><br>
        <input type="text" name="title" placeholder="title" class="form-control" required value="<%= project.title %>"><br>
        <textarea rows="5" name="desc" placeholder="desc" class="form-control" required><%= project.desc %></textarea><br>
        <input type="file" name="image" class="form-control"><br>

        <input type="submit" value="Update" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ProjectController.manage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
