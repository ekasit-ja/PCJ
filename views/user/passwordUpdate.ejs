<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <h2 class="header">Change Password</h2>
            <br>

            <form method="post">
                <input type="password" name="oldPassword" required placeholder="Old Password" class="form-control"><br>
                <input type="password" id="new-pass" name="newPassword" required placeholder="New Password" class="form-control"><br>
                <input type="password" id="con-pass" name="confirmation" required placeholder="Password Confirmation" class="form-control" data-parsley-equalto="input[name='newPassword']" data-parsley-equalto-message="Passwords don't match"><br>

                <input type="submit" value="Change Password" class="btn btn-primary">
                <a href="<%=sails.getUrlFor('AdminController.dashboard')%>" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('form').parsley();
</script>
