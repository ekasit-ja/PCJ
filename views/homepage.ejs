<div class="owl-carousel carousel-view">
    <%_.each(imgs, function(img) {%>
        <div class="item">
            <img src="<%=img.url%>" class="img-responsive center-block">
        </div>
    <%})%>

    <%if(imgs.length < 1) {%>
        <div class="item">
            <img src="/images/carousel_1.jpg" class="img-responsive center-block" alt="First slide">
        </div>
        <div class="item">
            <img src="/images/carousel_2.jpg" class="img-responsive center-block" alt="Second slide">
        </div>
        <div class="item">
            <img src="/images/carousel_3.jpg" class="img-responsive center-block" alt="Third slide">
        </div>
        <div class="item">
            <img src="/images/carousel_4.jpg" class="img-responsive center-block" alt="Third slide">
        </div>
    <%}%>
</div>
<br>

<div class="container">
    <h3 class="header" style="text-transform: uppercase;"><%=__("quality-you-can-trust")%></h3>
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <p class="text-justify"><%=__("quality-you-can-trust-detail")%></p>
        </div>
    </div>
    <div class="row">
        <img src="/images/certificate.jpg" class="img-responsive">
    </div>
    <hr>
    <h3 class="header"><%=__("projects")%></h3>

    <%- partial("base/btn-project.ejs") %>

    <br>
    <div class="text-center">
        <a href="<%= sails.getUrlFor('ProjectController.view') %>" class="btn btn-default text-capitalize"><%=__("view-all")%></a>
    </div>
    <br>
</div>

<script type="text/javascript">
    $(function(){
        $(".owl-carousel").owlCarousel({
            items: 1,
            loop: true,
            nav: true,
            navText: [
                    '<i class="fa fa-chevron-left" aria-hidden="true"></i>',
                    '<i class="fa fa-chevron-right" aria-hidden="true"></i>'],
            autoplay: true,
            autoplayTimeout: 6000,
            smartSpeed: 1000,
        });
    });
</script>
