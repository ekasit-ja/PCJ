<div class="container">
    <h2 class="header">update type</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <div class="img-frame"><img src="<%= type.image %>"></div><br>
        <select name="category" class="form-control">
            <% for(var key in sails.config.enums.category) { %>
                <option value="<%= key %>" <% if(type.category==key) { %> selected <% } %>><%= sails.config.enums.category[key] %></option>
            <% } %>
        </select><br>
        <input type="text" name="title" placeholder="title" class="form-control" required value="<%= type.title %>"><br>
        <input type="file" name="image" class="form-control"><br>

        <input type="submit" value="Update" class="btn btn-success">
        <a href="<%= sails.getUrlFor('TypeController.manage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
