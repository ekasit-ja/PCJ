<div class="container">
    <%if(model) {%>

        <div class="product-video-row row">
            <div class="product-video-col col-sm-4">
                <div class="video-frame">
                    <div class="text-center videowrapper">
                        <video controls style="width: 100%;" poster="/images/frd_vdo_poster.jpg">
                            <source src="<%=getLocale()=="th"?"/videos/pcj_frd_th.mp4":"/videos/pcj_frd_en.mp4"%>" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
                <h4 class="header red-text"><%=__("frd-vdo-commercial")%></h4>
            </div>

            <div class="col-sm-4">
                <div class="video-frame">
                    <div class="text-center videowrapper">
                        <video controls style="width: 100%;" poster="<%=getLocale()=="th"?"/images/pcj_frd_ul_01_th_poster.jpg":"/images/pcj_frd_ul_01_en_poster.jpg"%>">
                            <source src="<%=getLocale()=="th"?"/videos/pcj_frd_ul_01_th.mp4":"/videos/pcj_frd_ul_01_en.mp4"%>" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
                <h4 class="header red-text"><%-__("frd-vdo-ul-01")%></h4>
            </div>

            <div class="col-sm-4">
                <div class="video-frame">
                    <div class="text-center videowrapper">
                        <video controls style="width: 100%;" poster="<%=getLocale()=="th"?"/images/pcj_frd_vision_ul_01_th_poster.jpg":"/images/pcj_frd_vision_ul_01_en_poster.jpg"%>">
                            <source src="<%=getLocale()=="th"?"/videos/pcj_frd_vision_ul_01_th.mp4":"/videos/pcj_frd_vision_ul_01_en.mp4"%>" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
                <h4 class="header red-text"><%-__("frd-vision-vdo-ul-01")%></h4>
            </div>
        </div>

        <hr>

        <h2 class="header"><%=__("fire-steel-doors")%></h2>
        <div class="row">
            <div class="col-sm-8 col-sm-push-2">
                <p class="text-justify"><%=__("fsd-p1")%></p>
            </div>
        </div>

        <img src="/images/cert fsd.jpg" class="img-responsive center-block product-cert">
        <hr>

        <%- partial("../../base/fotorama.ejs") %>

        <h3 class="header"><%=__("option-you-can-choose")%></h3>
        <div class="option-container">
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 col-xs-3 option-label"><%=__("size")%></div>
                <div class="col-sm-9 col-xs-9 option-detail"><%=__("available-upon-request-doors")%></div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 col-xs-3 option-label"><%=__("fire-rating")%></div>
                <div class="col-sm-9 col-xs-9 option-detail"><%=__("0-3-hours")%></div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 col-xs-3 option-label"><%=__("door-style")%></div>
                <div class="col-sm-9 col-xs-9 option-detail"><%=__("door-style-p1")%></div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 col-xs-3 option-label"><%=__("door-type")%></div>
                <div class="col-sm-9 col-xs-9 option-detail"><%=__("door-type-p1")%></div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1 col-xs-3 option-label"><%=__("vision-panel")%></div>
                <div class="col-sm-9 col-xs-9 option-detail"><%=__("vision-panel-p1")%></div>
            </div>
        </div>
        <br>

        <h3 class="header"><%=__("hardware-you-can-add")%></h3>
        <div class="hardware-container">
            <% for(var i=0; i<hardwares.length; i++) { var k=0; %>

                <%if(hardwares[i].length>0) {%>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="hardware-section">
                                <% for(var j=0; j<hardwares[i].length; j++) { %>
                                    <% if(k%3==0) {%> <div class="row"> <%}%>

                                        <div class="col-sm-4 col-xs-12 hardware-btn">
                                            <div class="img-frame"><img src="<%= hardwares[i][j].image %>" alt="<%=hardwares[i][j].title%>"></div>
                                            <div class="item-title"><%= hardwares[i][j].title %></div>
                                            <div class="item-desc"><%- hardwares[i][j].desc %></div>
                                        </div>

                                    <% if(k%3==2) {%> </div> <%}%>
                                <% k++; } %> </div>
                            </div>
                        </div>
                    </div>
                <%}%>

            <% } %>
        </div>
        <br>

        <%- partial("../../base/product_tab.ejs") %>
        <br>
        <%- partial("../../base/quote_button.ejs") %>
        <br>

    <%} else {%>
        <br>
        <p class="alert alert-warning text-center">There is no requested model.</p>
    <%}%>
</div>
