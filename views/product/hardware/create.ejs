<div class="container">
    <h2 class="header">create product hardware</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <input type="file" name="image" class="form-control" required><br>
        <select name="hardware" class="form-control">
            <% for(var key in sails.config.enums.hardware) { %>
                <option value="<%= key %>"><%= sails.config.enums.hardware[key] %></option>
            <% } %>
        </select><br>
        <input type="text" name="title" placeholder="title" class="form-control" required><br>
        <textarea rows="5" name="desc" placeholder="desc" class="form-control" required></textarea><br>

        <input type="submit" value="Create" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ProductController.hardwareManage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
