<div class="container">
    <h2 class="header">manage product model</h2>

    <a href="<%= sails.getUrlFor("ProductController.modelCreate") %>" class="btn btn-default">
        Create
    </a>
    <a href="<%= sails.getUrlFor("ProductController.manager") %>" class="btn btn-primary">
        Back
    </a>
    <hr>

    <table class="table table-striped admin-table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Title</th>
                <th>Image</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% _.each(models, function(model) { %>
                <tr>
                    <td><%= model.type.title %></td>
                    <td><%= model.title %></td>
                    <td><img src="<%= model.image %>"></td>
                    <td>
                        <a href="<%= sails.getUrlFor("ProductController.modelUpdate").replace(":mid", model.id) %>" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <form method="post" action="<%= sails.getUrlFor('ProductController.modelDelete') %>">
                            <input type="hidden" name="mid" value="<%= model.id %>">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
