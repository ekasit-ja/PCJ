<div class="container">
    <h2 class="header">create product type</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <input type="file" name="image" class="form-control" required><br>
        <select name="category" class="form-control">
            <% _.each(categories, function(category) { %>
                <option value="<%= category.id %>"><%= category.title %></option>
            <% }) %>
        </select><br>
        <input type="text" name="title" placeholder="title" class="form-control" required><br>

        <input type="submit" value="Create" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ProductController.typeManage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
