<script type="text/javascript">
    $(function(){
        $(".owl-carousel.carousel-browse.model").owlCarousel({
            margin: 10,
            nav: true,
            navText: [
                    `<i class="fa fa-chevron-left" aria-hidden="true"></i>`,
                    `<i class="fa fa-chevron-right" aria-hidden="true"></i>`],
            rewind: true,
            responsive: {
                    0: {items: 1,},
                    768: {items: 2,},
                    992: {items: 3,},},
        });

        var owl = $(".owl-carousel.carousel-browse.hardware");
        owl.owlCarousel({
            margin: 10,
            rewind: true,
            nav: true,
            dots: false,
            navText: [
                    `<i class="fa fa-chevron-left" aria-hidden="true"></i>`,
                    `<i class="fa fa-chevron-right" aria-hidden="true"></i>`],
            responsive: {
                    0: {items: 1,},
                    768: {items: 2,},
                    992: {items: 3,},},
            onRefresh: function () {
                owl.find('div.owl-item').height('');
            },
            onRefreshed: function () {
                owl.find('div.owl-item').height(owl.height());
            }
        });
    });

    // Function to change thumbnail label
    $(function() {
        $('.fotorama').on(
            'fotorama:show',
            function (e, fotorama, extra) {
                try {
                    $(".thumbnail-label").text(fotorama.activeFrame.label);
                }
                catch(e) {}
            }
        );
    });
</script>
