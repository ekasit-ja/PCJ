<div class="container">
    <h2 class="header">create product category</h2>
    <br>

    <form method="post" class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" enctype="multipart/form-data">
        <div class="img-frame"><img src="<%= category.image %>"></div><br>
        <input type="file" name="image" class="form-control"><br>
        <input type="text" name="title" placeholder="title" class="form-control" required value="<%= category.title %>"><br>

        <input type="submit" value="Update" class="btn btn-success">
        <a href="<%= sails.getUrlFor('ProductController.categoryManage') %>" class="btn btn-danger">Cancel</a>
    </form>
</div>
