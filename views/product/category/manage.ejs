<div class="container">
    <h2 class="header">manage product category</h2>

    <a href="<%= sails.getUrlFor("ProductController.categoryCreate") %>" class="btn btn-default">
        Create
    </a>
    <a href="<%= sails.getUrlFor("ProductController.manager") %>" class="btn btn-primary">
        Back
    </a>
    <hr>

    <table class="table table-striped admin-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% _.each(categories, function(category) { %>
                <tr>
                    <td><%= category.title %></td>
                    <td><img src="<%= category.image %>"></td>
                    <td>
                        <a href="<%= sails.getUrlFor("ProductController.categoryUpdate").replace(":cid", category.id) %>" class="btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <form method="post" action="<%= sails.getUrlFor('ProductController.categoryDelete') %>">
                            <input type="hidden" name="cid" value="<%= category.id %>">
                            <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
