<div id="lightbox" class="lightbox">
    <div class="col-sm-3 col-sm-push-9 lightbox-text">
        <div class="title"><%= project.title %></div>
        <div>
            <div class="country">
                Location :
                <%if(project.region) {%>
                    <%=project.region%>,
                <%}%>
                <%if(project.country) {%>
                    <%=project.country%>
                <%}%>
            </div>

            <%if(project.year) {%>
                <div class="year">Year : <%=project.year%></div>
            <%}%>
        </div>
        <div class="desc"><%= project.desc %></div>
    </div>
    <div class="col-sm-9 col-sm-pull-3 thumbnail-container">
        <div
            class="fotorama"
            data-nav="thumbs"
            data-width="100%"
            data-height="60%"
            data-arrows="false"
            data-click="false"
            data-thumbmargin="5">

            <% _.each(project.images, function(image) { %>
                <img src="<%= image.url %>" width="50" height="50">
            <% }) %>
        </div>
    </div>
</div>
